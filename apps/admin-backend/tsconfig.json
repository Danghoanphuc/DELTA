{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmitOnError": false,
    "noEmit": false
  },
  "include": ["src/**/*.ts", "!src/**/*.js"],
  "exclude": [
    "node_modules",
    "dist",
    "../**/*",
    "../../apps/customer-backend",
    "../../apps/admin-frontend",
    "../../apps/customer-frontend",
    "../../packages"
  ],
  "ts-node": {
    "skipIgnore": true
  }
}
