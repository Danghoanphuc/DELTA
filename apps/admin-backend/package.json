{
  "name": "admin-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project tsconfig.json --rootDir ./src --skipLibCheck",
    "build:watch": "tsc --watch",
    "start": "node --import ./dist/infrastructure/instrument.js dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:server": "nodemon",
    "lint": "eslint .",
    "script:create-superadmin": "pnpm build && node dist/scripts/createSuperAdmin.js",
    "test:sentry": "node scripts/test-sentry.js"
  },
  "dependencies": {
    "@printz/types": "workspace:*",
    "@sentry/node": "^8.55.0",
    "@sentry/profiling-node": "^8.55.0",
    "@logtail/node": "^0.5.2",
    "@logtail/winston": "^0.5.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "resend": "^6.4.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  }
}
