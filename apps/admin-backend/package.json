{
  "name": "admin-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project tsconfig.json --rootDir ./src",
    "build:watch": "tsc --watch",
    "start": "node --import ./dist/infrastructure/instrument.js dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:server": "nodemon",
    "lint": "eslint .",
    "script:create-superadmin": "pnpm build && node dist/scripts/createSuperAdmin.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=__tests__/integration/.*\\.test\\.ts$",
    "test:sentry": "node scripts/test-sentry.js"
  },
  "dependencies": {
    "@logtail/node": "^0.5.2",
    "@logtail/winston": "^0.5.2",
    "@printz/types": "workspace:*",
    "@sentry/node": "^8.55.0",
    "@sentry/profiling-node": "^8.55.0",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^16.4.5",
    "expr-eval": "^2.0.2",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.32.0",
    "qrcode": "^1.5.4",
    "redis": "^5.10.0",
    "resend": "^6.4.2",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/expr-eval": "^1.1.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "@types/puppeteer": "^7.0.4",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "fast-check": "^4.4.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  }
}
